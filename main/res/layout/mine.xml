<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#f96e83">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="我的"
            android:gravity="center_horizontal|bottom"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/mine_btn_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shouye13_03"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!--头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <com.xiao.view.MyInformationLlayout
            android:id="@+id/mine_llayout_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            ></com.xiao.view.MyInformationLlayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="健康档案"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/mine_btn_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="宝贝日常"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/mine_btn_dossier"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="病历夹"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="分享"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="设置"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            />
    </LinearLayout>

</LinearLayout>
