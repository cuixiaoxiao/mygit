<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/mine_llayout_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mic_launcher"

        android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mine_llayout_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123443232323"
            android:textSize="20dp"
            android:layout_toRightOf="@id/mine_llayout_iv_head"
            android:layout_alignTop="@id/mine_llayout_iv_head"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/mine_llayout_tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="23432523534"
            android:textSize="15dp"
            android:layout_alignBottom="@id/mine_llayout_iv_head"
            android:layout_toRightOf="@id/mine_llayout_iv_head"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"/>
</RelativeLayout>


